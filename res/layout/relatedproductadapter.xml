<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/clickedbackground"
    android:id="@+id/relatedParent"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/relatedimage"
        android:layout_width="50px"
        android:layout_height="50px"
        android:src="@drawable/default_image"
        android:focusable="false" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:focusable="false">

        <TextView
            android:id="@+id/relatedname"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:layout_marginLeft="15px"
            android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:layout_marginLeft="15px" >

            <RatingBar
                android:id="@+id/relatedrating"
                style="@style/smallRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false" 
                android:numStars="5"/>

            <TextView
                android:id="@+id/relatedjumrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" 
            	android:layout_marginLeft="10px"
            	android:focusable="false" 
            	android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>